<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dev.security.tests.dao.RoleMenuDao">
    <resultMap id="BaseResultMap" type="com.dev.security.tests.entity.RoleMenu">
        <!--@mbg.generated-->
        <!--@Table tb_role_menu-->
        <id column="role_id" property="roleId"/>
        <id column="menu_id" property="menuId"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="delete_flag" property="deleteFlag"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        role_id,
        menu_id,
        create_by,
        create_time,
        update_by,
        update_time,
        delete_flag
    </sql>

    <insert id="insertList">
        INSERT INTO tb_role_menu(role_id,
                                 menu_id,
                                 create_by,
                                 create_time,
                                 update_by,
                                 update_time,
                                 delete_flag)VALUES
        <foreach collection="roleMenuList" item="roleMenu" index="index" separator=",">
            (#{roleMenu.roleId},
             #{roleMenu.menuId},
             #{roleMenu.createBy},
             #{roleMenu.createTime},
             #{roleMenu.updateBy},
             #{roleMenu.updateTime},
             #{roleMenu.deleteFlag})
        </foreach>
    </insert>

    <delete id="deleteByRoleId">
        update tb_role_menu
        set delete_flag = 1
        where role_id = #{roleId}
    </delete>
    
    <delete id="deleteByMenuId">
        update tb_role_menu
        set delete_flag = 1
        where menu_id = #{menuId}
    </delete>
</mapper>